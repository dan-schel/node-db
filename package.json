{
  "name": "@dan-schel/db",
  "version": "0.1.5",
  "type": "module",
  "files": [
    "dist"
  ],
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json",
    "test": "vitest --run",
    "test-coverage": "vitest --run --coverage",
    "lint": "eslint . --max-warnings 0 && tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "bump-check": "bump-check --ignore \"^renovate\\/\"",
    "package": "npm run build && npm pack"
  },
  "dependencies": {
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@dan-schel/js-utils": "4.5.4",
    "@eslint/js": "9.39.1",
    "@types/node": "22.19.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "prettier": "3.7.3",
    "typescript": "5.9.3",
    "typescript-eslint": "8.48.0",
    "vitest": "3.2.4",
    "vitest-mock-extended": "3.1.0"
  },
  "author": "dan-schel",
  "description": "Provides a common API for working with MongoDB or an in-memory database.",
  "license": "MIT",
  "homepage": "https://github.com/dan-schel/node-db",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mongodb",
    "in-memory",
    "database"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:dan-schel/node-db.git"
  },
  "bugs": {
    "url": "https://github.com/dan-schel/node-db/issues"
  }
}
